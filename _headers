# Netlify Headers Configuration
# Force no-cache for critical files to ensure updates

# HTML files - never cache
/*.html
  Cache-Control: no-cache, no-store, must-revalidate
  Pragma: no-cache
  Expires: 0

/
  Cache-Control: no-cache, no-store, must-revalidate
  Pragma: no-cache
  Expires: 0

# JavaScript files - never cache
/js/*
  Cache-Control: no-cache, no-store, must-revalidate
  Pragma: no-cache
  Expires: 0

# Service Worker - never cache
/sw.js
  Cache-Control: no-cache, no-store, must-revalidate
  Pragma: no-cache
  Expires: 0

# Version file - never cache
/version
  Cache-Control: no-cache, no-store, must-revalidate
  Pragma: no-cache
  Expires: 0

# CSS - short cache
/css/*
  Cache-Control: public, max-age=3600

# Images - longer cache
/images/*
  Cache-Control: public, max-age=86400

# Data files - medium cache
/data/*
  Cache-Control: public, max-age=3600
